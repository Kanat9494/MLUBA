<nav class="mobile-bottom-nav fixed-bottom" style=@($"visibility: visible")>
	<div class="mobile-bottom-nav__item ">
        <a href="" @onclick="HomeStatus" class=@($"nav-link {(isHome ? "mobile-bottom-nav__item--active" : "mobile-bottom-nav__item--inactive")}")>
			<div class="mobile-bottom-nav__item-content">
                <i class="fas fa-home fa-2x"></i>
				Главная
			</div>
		</a>
	</div>

    <div class="mobile-bottom-nav__item">
        <a href="counter" @onclick="AccountStatus" class=@($"nav-link {(isAccount ? "mobile-bottom-nav__item--active" : "mobile-bottom-nav__item--inactive")}")>
            <div class="mobile-bottom-nav__item-content">
                <i class="fas fa-user fa-2x"></i>
                Аккаунт
            </div>
        </a>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private bool isHome = true;
    private bool isAccount = false;

    void HomeStatus()
    {
        isHome = true;
        isAccount = false;
    }

    void AccountStatus()
    {
        isHome = false;
        isAccount = true;
    }
}
